-- MÃºsica de Amor Infinita ðŸ’–
local speaker = peripheral.find("speaker")

if not speaker then
  print("No se encontrÃ³ el altavoz ðŸ˜¢")
  return
end

-- Notas de la canciÃ³n (como tono entre 0-24)
local melody = {
  {note=12, time=0.3},  -- Do
  {note=14, time=0.3},  -- Re
  {note=15, time=0.4},  -- Mi
  {note=14, time=0.2},  -- Re
  {note=17, time=0.4},  -- Sol
  {note=19, time=0.3},  -- La
  {note=17, time=0.3},  -- Sol
  {note=15, time=0.5},  -- Mi
  {note=14, time=0.3},  -- Re
  {note=12, time=0.6},  -- Do
}

-- Instrumento romÃ¡ntico (pling o harp)
local instrument = "pling"

print("ðŸ’– Reproduciendo mÃºsica de amor... presiona Ctrl+T para detener")

while true do
  for _, note in ipairs(melody) do
    speaker.playNote(instrument, 2, note.note)
    os.sleep(note.time)
  end
end
