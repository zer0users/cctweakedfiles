      printer.write("â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ")
      printer.endPage()
      monitor.setCursorPos(1, 5)
      monitor.write("Â¡Impreso con amor! ğŸ™")
    else
      monitor.setCursorPos(1, 5)
