-- agua_infinita.lua üåäüìü
-- Coloca anillos cuadrados de agua que se expanden, sin tocar la Command‚ÄØComputer

-------------------------------------------------
-- CONFIGURACI√ìN R√ÅPIDA -------------------------
-------------------------------------------------
local ALTURA   = 0       -- 0 = mismo Y donde est√° la compu
local PAUSA    = 0.75    -- segundos entre cada ‚Äúcrecimiento‚Äù
local MAX_LADO = 3000    -- por si quieres cortar el bucle alg√∫n d√≠a

-------------------------------------------------
-- FUNCI√ìN AUXILIAR fill ------------------------
-------------------------------------------------
local function fill(x1,z1, x2,z2)
  -- Agua fuente (level=0) + ‚Äúreplace air‚Äù para no reescribir bloques s√≥lidos
  local cmd = string.format(
    'fill ~%d ~%d ~%d ~%d ~%d ~%d minecraft:water[level=0] replace air',
    x1, ALTURA, z1,   x2, ALTURA, z2
  )
  commands.exec(cmd)
end

-------------------------------------------------
-- BUCLE PRINCIPAL ------------------------------
-------------------------------------------------
local lado = 1   -- arranca con anillo 1√ó1 (no toca el centro)
while lado <= MAX_LADO do
  -- Coloca los cuatro lados del anillo cuadrado de tama√±o ‚Äúlado‚Äù
  fill(-lado, -lado,  lado, -lado)  -- Frente
  fill(-lado,  lado,  lado,  lado)  -- Fondo
  fill(-lado, -lado, -lado,  lado)  -- Izquierda
  fill( lado, -lado,  lado,  lado)  -- Derecha

  lado = lado + 1      -- ¬°Crece para el pr√≥ximo ciclo!
  sleep(PAUSA)
end
