local FILES = {
  -- Arranque principal -------------------------------------------------
  {
    path = "android/boot.lua",
    data = [=[
-- android/boot.lua ðŸ“±
-- Mini sistema â€œAndroidâ€ para Pocket Computer
local termW, termH = term.getSize()
local apps = {
  {name = "Terminal", file = "android/apps/terminal.lua"},
  {name = "Notas",    file = "android/apps/notes.lua"},
  {name = "VersÃ­culo",file = "android/apps/verse.lua"},
  {name = "Calculadora", file = "android/apps/calc.lua"},
  {name = "Reloj",     file = "android/apps/clock.lua"},
}
local sel = 1

local function draw()
  term.setBackgroundColor(colors.black)
  term.setTextColor(colors.white)
  term.clear()
  term.setCursorPos(2,1)
  print("â˜ Usa â†‘/â†“ y Enter para abrir apps")
  for i,a in ipairs(apps) do
    term.setCursorPos(4, i+2)
    if i==sel then
      term.setBackgroundColor(colors.blue)
      term.setTextColor(colors.white)
    else
      term.setBackgroundColor(colors.black)
      term.setTextColor(colors.lightGray)
    end
    term.write(string.format("%d. %s", i, a.name .. string.rep(" ", 12-#a.name)))
  end
end

local function main()
  draw()
  while true do
    local e, p = os.pullEvent()
    if e == "key" then
      if p == keys.up   then sel = sel>1 and sel-1 or #apps; draw() end
      if p == keys.down then sel = sel<#apps and sel+1 or 1; draw() end
      if p == keys.enter then
        term.setBackgroundColor(colors.black) term.clear()
        shell.run(apps[sel].file)
        draw()
      end
    end
  end
end

local ok, err = pcall(main)
if not ok and err == "Terminated" then
  -- Si se presiona Ctrl+T, reiniciar para evitar salir al shell
  os.reboot()
end
]=]
  },

  -- Apps --------------------------------------------------------------
  {
    path = "android/apps/terminal.lua",
    data = [=[
-- Terminal: simplemente abre el shell nativo
shell.run("shell")
]=]
  },

  {
    path = "android/apps/notes.lua",
    data = [=[
-- Notas sencillas
term.clear() term.setCursorPos(1,1)
print("Notas de Amor (Ctrl+T para salir)")
print("Escribe y se guardarÃ¡ en notes.txt")
local fh = fs.open("notes.txt", "a")
while true do
  local l = read()
  if l == "" then break end
  fh.writeLine(l)
end
fh.close()
]=]
  },

  {
    path = "android/apps/verse.lua",
    data = [=[
-- VersÃ­culo aleatorio
local verses = {
  "Juan 3:16 â€“ Porque de tal manera amÃ³ Diosâ€¦",
  "Salmo 23:1 â€“ JehovÃ¡ es mi pastor; nada me faltarÃ¡.",
  "Filipenses 4:13 â€“ Todo lo puedo en Cristoâ€¦",
}
term.clear() term.setCursorPos(1,1)
print("VersÃ­culo del dÃ­a:\n")
print(verses[math.random(#verses)])
print("\nPulsa cualquier tecla para volverâ€¦")
os.pullEvent("key")
]=]
  },

  {
    path = "android/apps/calc.lua",
    data = [=[
-- Calculadora simple
term.clear() term.setCursorPos(1,1)
print("ðŸ§® Calculadora de Amor")
write("NÃºmero 1: ") local a = tonumber(read())
write("OperaciÃ³n (+ - * /): ") local op = read()
write("NÃºmero 2: ") local b = tonumber(read())
local res = ""
if op == "+" then res = a + b
elseif op == "-" then res = a - b
elseif op == "*" then res = a * b
elseif op == "/" then res = b ~= 0 and (a / b) or "âˆž"
else res = "OperaciÃ³n invÃ¡lida"
end
print("\nResultado: ", res)
print("\nPulsa una tecla para volverâ€¦")
os.pullEvent("key")
]=]
  },

  {
    path = "android/apps/clock.lua",
    data = [=[
-- Reloj en tiempo real
term.clear()
term.setCursorPos(1,1)
print("ðŸ•’ Reloj del sistema (Ctrl+T para salir)")
while true do
  local t = textutils.formatTime(os.time(), true)
  term.setCursorPos(1,3)
  term.clearLine()
  term.write("Hora: " .. t)
  sleep(1)
end
]=]
  },

  -- Autoâ€‘arranque raÃ­z -----------------------------------------------
  {
