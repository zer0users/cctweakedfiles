}

-----------------------------------------------------------------------
-- FunciÃ³n auxiliar: escribe un archivo creando carpetas si faltan ----
-----------------------------------------------------------------------
local function writeFile(path, data)
  local dir = path:match("(.+)/[^/]+")
  if dir and not fs.exists(dir) then fs.makeDir(dir) end
  local f = fs.open(path, "w")
  if not f then error("âŒ No se pudo escribir "..path) end
  f.write(data)
  f.close()
  print("âœ… "..path)
end

print("\nðŸ“² Instalando Android PocketÂ OSâ€¦\n")
for _,file in ipairs(FILES) do writeFile(file.path, file.data) end

print("\nWARNING: This computer will reboot to apply changes, Do you want to reboot with love? :D")
write("(y/n) ")
local ans = read():lower()
if ans=="y" or ans=="yes" then
  print("\nReiniciando con amorâ€¦ ðŸ’–")
  sleep(1)
  os.reboot()
else
  print("\nInstalaciÃ³n completa. Reinicia manualmente cuando quieras. ðŸ˜Š")
end
